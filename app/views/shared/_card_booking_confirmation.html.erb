<div class="card_booking_confirmation">
  <div class="card_booking_confirmation_description">
      <h4>Votre réservation : </h4>
      <h2 ><%= booking.watch.brand %></h2>
      <h4 class="date"><%= @booking.start_at.strftime("%d-%m-%Y") %></h4>
      <p class="po"><%= booking.watch.description %></p>
      <h4><%= booking.watch.price %> €</h4>
      <div class="btn btn-danger">paiement</div>
    </div>
    <div class="card_booking_confirmation_photo">
      <%= cl_image_tag @booking.watch.image, alt: "watch" %>
    </div>
  </div>
</div>
