<div class="container">
  <h1 class="text-center">Dribble Demo</h1>

  <div class="cards">
    <div class="row">
      <% 3.times do %>
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <div class="card-content">
              <div class="card-image" style="background: url('https://images.unsplash.com/photo-1533170462066-6e8a50d8892a?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=ebf5efc15891d0e0e4d8b865f2b4797a&auto=format&fit=crop&w=1350&q=80');">
                <div class="hidden-description">
                  <h3>USAA Design NYC</h3>
                  <p class="lorem-et-hardy">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ex, dignissimos.</p>
                  <p>about 5 hours ago</p>
                </div>
              </div>
              <ul class="card-stats">
                <li><i class="fas fa-eye"></i> 6,011</li>
                <li><i class="fas fa-comment"></i> 11</li>
                <li><i class="fas fa-heart"></i> 365</li>
              </ul>
            </div>

            <div class="card-user">
              <img src="http://via.placeholder.com/150x150" alt="avatar">
              <p>Markus Magnusson</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
